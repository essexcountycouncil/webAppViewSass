@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model string
<div class="signup" role="form" aria-label="Subscribe to email">
  <h2 class="section-heading">Get the latest news and information about your council services</h2>
  <form asp-controller="Home" asp-action="EmailSubscribe" method="get" class="form">
    <div class="group">
      <div class="signup-input">
        <label for="email">Enter your email address
          <input type="text" id="email" name="emailAddress" autocomplete="off" placeholder="Enter your email address">
        </label>
      </div>
      <div class="signup-button" id="submitYourEmailAddress">
        <button type="submit" class="button subscribe" value="Subscribe">Subscribe</button>
      </div>
    </div>
  </form>
</div>