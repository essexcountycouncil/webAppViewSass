@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model string
    <h3 class="section-heading"> 
        Stay up to date
    </h3>

    <p>
        Get the latest news and information about your council services
    </p>
    <form asp-controller="Home" asp-action="EmailSubscribe" method="get" role="form" class="form">
        <div class="group">
            <div class="signup-input">
                <label for="email">Enter your email address</label>
                <input type="text"  id="email" name="emailAddress" placeholder="Enter your email address">
            </div>
            <div class="signup-button" id="submitYourEmailAddress">
                <input type="submit" class="button subscribe" value="Subscribe" aria-labelledby="submitYourEmailAddress">
                @if(Model != null) {
                <input type="hidden" class="" name="EmailAlertsTopicId" value="@Model" />
            }
            </div>
        </div>
    </form>