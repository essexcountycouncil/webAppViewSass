@model EssexWebapp.Models.Topic

@if (Model.SubItems.Any())
{
    
        <ul class="link-boxes">
            @foreach (var subItem in Model.SubItems)
            {
                <li class="link-box">
                    <div class="link-content">
                        <h2 class="sub-section-heading"><a href="@subItem.NavigationLink">@subItem.Title</a></h2>
                        <p>@subItem.Teaser</p>
                    </div>
                </li>
            }
        </ul>
    
}

