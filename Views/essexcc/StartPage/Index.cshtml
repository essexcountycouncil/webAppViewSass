@model EssexWebapp.ProcessedModels.ProcessedStartPage
@{
    ViewData["Title"] = Model.Title;
    ViewData["og:title"] = Model.Title;
    ViewData["Description"] = Model.Teaser;
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <partial name="Breadcrumb" model='Model.Breadcrumbs'/>
}

    
        <div class="main">
            <section class="intro">

                @{
                    if (Model.Alerts != null)
                    {
                        foreach (var alert in Model.Alerts)
                        {
                            <partial name="DisplayTemplates/Alert" model='alert' />
                        }
                    }
                }
                <h1>@Model.Title</h1>
            </section>
            <section class="content">
                <p class="subtitle">@Model.Summary</p>
                @Html.Raw(Model.UpperBody)
                <a href="@Model.FormLink" class="button button-start" role="button">@Model.FormLinkLabel</a>
                @Html.Raw(Model.LowerBody)
            </section>
            
        </div>
    

<script type="text/javascript">
    require(['alerts', 'startup'],
    function (alerts, startup) {
        alerts.Init();
        startup.Init();
    });
</script>